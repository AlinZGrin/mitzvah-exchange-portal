# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to git - it contains sensitive information

# Database - Using direct connection for development
DATABASE_URL="your-database-url-here"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-nextauth-secret-key-for-development-only"

# Email Configuration - Gmail Setup
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-gmail-app-password"  # Generate from Google Account Settings
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_FROM="noreply@yourdomain.com"

# JWT Secret - CRITICAL: This was the missing piece!
JWT_SECRET="dev-jwt-secret-key-change-in-production-super-long-secret-key-for-development-only-123456789"

# Application Settings
APP_NAME="Mitzvah Exchange Portal"
APP_URL="http://localhost:3000"
