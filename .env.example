# Copy this file to .env.local and configure your environment variables

# Database
DATABASE_URL="file:./dev.db"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Email Configuration (Optional - for notifications)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@mitzvahexchange.com"

# File Upload (Optional - for future file features)
UPLOAD_MAX_SIZE="5242880" # 5MB in bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Development
NODE_ENV="development"

# Security (Production)
# CSRF_SECRET="your-csrf-secret"
# CORS_ORIGIN="https://yourdomain.com"

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID="GA-XXXXXXXXXX"

# Payment Integration (Future feature)
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."

# Push Notifications (Future feature)
# VAPID_PUBLIC_KEY="your-vapid-public-key"
# VAPID_PRIVATE_KEY="your-vapid-private-key"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
